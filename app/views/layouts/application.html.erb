  <head>
    <title>Kratos</title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body id="<%= params[:controller] + '-' + params[:action] %>">

    <header>
      <span id="logo">
        Kratos
        <small>The people app for people's power</small>
      </span>
      <%= render 'devise/menu/su_items' %>
    </header>

    <% if notice || alert %>
      <div class="flash" id="flash-main">
        <%= content_tag(:p, notice, :class => 'notice') if notice %>
        <%= content_tag(:p, alert, :class => 'alert') if alert  %>
      </div>
    <% end %>
    <article role="main"><%= yield %></article>

    <footer></footer>
